<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="dariabeliaeva.diploma.com.finefin.BudgetFragment"
    android:background="#FFFFFF">

   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="Income"
       android:id="@+id/textView2"
       android:layout_marginLeft="16dp"
       android:layout_marginTop="16dp"
       android:textColor="#4d000000" />

    <EditText
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:inputType="numberSigned"
        android:layout_marginRight="30dp"
        android:textSize="20dp"
        android:id="@+id/monthly_incomes"
        android:layout_alignTop="@+id/textView2"
        android:layout_toRightOf="@+id/textView2"
        android:layout_alignParentEnd="true"
        android:gravity="left" />


 <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/fin_list"
        android:layout_alignParentStart="true"
     android:layout_below="@+id/textView12"
     android:layout_marginTop="16dp" />

 <TextView
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:textAppearance="?android:attr/textAppearanceMedium"
     android:text="0"
     android:id="@+id/tvIncomeLeft"
     android:layout_alignEnd="@+id/monthly_incomes"
     android:layout_below="@+id/monthly_incomes"
     android:textColor="#000000" />

 <TextView
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:textAppearance="?android:attr/textAppearanceSmall"
     android:text="Left: "
     android:id="@+id/textView12"
     android:layout_toStartOf="@+id/tvIncomeLeft"
     android:layout_alignTop="@+id/tvIncomeLeft"
     android:layout_alignBottom="@+id/tvIncomeLeft"
     android:gravity="center"
     android:layout_marginRight="8dp"
     android:textColor="#4d000000" />

 <android.support.design.widget.FloatingActionButton
     android:id="@+id/fab"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:src="@drawable/ic_add_white_24dp"
     android:layout_alignParentBottom="true"
     android:layout_centerHorizontal="true"
     android:layout_marginBottom="16dp" />

</RelativeLayout>
