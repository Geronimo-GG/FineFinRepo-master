<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/list_cell">

    <TextView
        android:id="@+id/todo_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:text="Main Text"
        android:textSize="24sp"
        android:textColor="@android:color/black"
        android:fontFamily="sans-serif-condensed"
        android:layout_toRightOf="@+id/imageView"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="4dp" />

    <TextView
        android:id="@+id/price_text_view"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="center_vertical"
        android:padding="4dp"

        android:textSize="24sp"
        android:textColor="@android:color/white"
        android:layout_alignEnd="@+id/todo_text_view"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/textView"
        android:layout_alignParentEnd="false"
        android:layout_toRightOf="@+id/imageView"
        android:layout_marginLeft="16dp"
        android:layout_below="@+id/todo_text_view"
        android:layout_toLeftOf="@+id/price_text_view" />

    <ImageView
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:id="@+id/imageView"
        android:layout_alignParentTop="false"
        android:layout_alignParentStart="true"
        android:src="@drawable/ic_monetization_on_white_24px"
        android:scaleType="fitCenter"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp"
        android:padding="8dp"
        android:background="@drawable/circle"
        android:tint="#787878"
        android:tintMode="src_in"
        android:layout_marginTop="8dp" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_toEndOf="@+id/imageView"
        android:background="#1a000000"
        android:layout_below="@+id/textView"
        android:layout_marginTop="8dp"
        android:id="@+id/frameLayout" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/tvDate"
        android:layout_toEndOf="@+id/todo_text_view"
        android:layout_below="@+id/price_text_view"
        android:layout_alignRight="@+id/price_text_view"
        android:gravity="right" />
</RelativeLayout>